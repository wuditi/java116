    <!--   由课程表获得学生信息，分步法       -->

    <select id="selectBysid" resultMap="studentMapper">
        select *
        from student
        where sid = #{sid}
    </select>
    <resultMap id="studentMapper" type="Student">
        <id column="sid" property="sid"/>
        <result column="sname" property="sname"/>
        <collection property="courses" ofType="Course" select="selectCourseBysid" column="sid"/>
    </resultMap>
    <select id="selectCourseBysid" resultType="Course">
        select *
        from course c,
             score sc
        where c.cid = sc.cid
          and sid = #{sid}
    </select>

</mapper>
