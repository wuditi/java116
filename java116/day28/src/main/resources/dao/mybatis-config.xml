<?xml version="1.0" encoding="UTF-8" ?>
<!-- XML声明，必须在xml第一行 -->
<!--  添加了约束文档 dtd也是一个xml文件，有自己的严格语法，规定xml文档必须满足什么要求(包含哪些标签，出现的次数，标签中有哪些属性) -->
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<!--  configuration是主配置文件的根节点 -->
<!--  Java中有一套专门读取XML配置文件的工具包dom4j -->
<configuration>
    <!--  常用设置  -->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <mappers>
        <!--  配置映射文件的路径，相对类路径      -->
        <!--        <mapper resource="com/woniuxy/mapper/StuMapper.xml"/>-->
        <package name="com.woniuxy.mapper"/>
    </mappers>
</configuration>